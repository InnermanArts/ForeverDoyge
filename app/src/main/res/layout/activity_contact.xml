<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="#ffffff"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/contact_background"
    tools:context="com.example.dennisthicklin.foreverdoyge.MainActivity">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

            <ImageView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/bar" />

        <Button
            android:id="@+id/cart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/cart"
            android:foreground="@drawable/ripple_effect_noborder"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/list"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:foreground="@drawable/ripple_effect_noborder"
            android:background="@drawable/listmenu"
            tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/contact_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/contact_header"/>
        </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/insta_button"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/insta_button"
            />
         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_toLeftOf="@+id/insta_button"
             android:background="@drawable/facebook_button"
             />
         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/insta_button"
             android:layout_centerInParent="true"
             android:background="@drawable/twitter_button"
             />
     </RelativeLayout>

        <EditText
            android:id="@+id/text_field"
            android:padding="5dp"
            android:alpha="0.8"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />
        <EditText
            android:id="@+id/text_field2"
            android:padding="5dp"
            android:alpha="0.8"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />
        <EditText
            android:id="@+id/text_field3"
            android:padding="5dp"
            android:alpha="0.8"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />

</LinearLayout>
<android.support.design.widget.NavigationView
android:id="@+id/navigationView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="#000000"
android:foreground="@drawable/ripple_effect"
app:menu="@menu/sidebar_menu">

</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>