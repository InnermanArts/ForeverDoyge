<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="#ffffff"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/aboutus"
        android:orientation="vertical"
        tools:context="com.example.dennisthicklin.foreverdoyge.OpenToIndividual">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/bar" />

            <Button
                android:id="@+id/cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/cart"
                android:foreground="@drawable/ripple_effect_noborder"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/list"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:foreground="@drawable/ripple_effect_noborder"
                android:background="@drawable/listmenu"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/open_header"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:background="@drawable/open_header"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/info"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/info"
                android:layout_centerInParent="true"
                android:layout_below="@+id/open_header"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        android:foreground="@drawable/ripple_effect"
        android:id="@+id/navigationView"
        app:menu="@menu/sidebar_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
