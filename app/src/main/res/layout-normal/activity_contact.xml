<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="@drawable/contact_background"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context="com.example.dennisthicklin.foreverdoyge.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/bar" />

            <Button
                android:id="@+id/cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/cart"
                android:foreground="@drawable/ripple_effect_noborder"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"/>

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="110dp"
                android:contentDescription="home"
                android:layout_height="150dp"
                android:background="@drawable/fdlogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
               />

            <Button
                android:id="@+id/list"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:foreground="@drawable/ripple_effect_noborder"
                android:background="@drawable/list_shadow"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/contact_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/contact_header"/>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/insta_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/insta_button"
                android:foreground="@drawable/ripple_effect_noborder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/facebook_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/insta_button"
                android:background="@drawable/facebook_button"
                android:foreground="@drawable/ripple_effect_noborder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.617"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

        <EditText
            android:id="@+id/name_field"
            android:padding="5dp"
            android:hint="Name..."
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"
            android:textColorHint="@android:color/darker_gray"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="4"
            android:foreground="@drawable/ripple_effect"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />
        <EditText
            android:id="@+id/email_text_field"
            android:padding="5dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginLeft="20dp"
            android:hint="Email..."
            android:textStyle="italic"
            android:foreground="@drawable/ripple_effect"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />
        <EditText
            android:id="@+id/subject_field"
            android:padding="5dp"
            android:hint="Subject..."
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="italic"
            android:foreground="@drawable/ripple_effect"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_field"
            />
        <EditText
            android:id="@+id/message_field"
            android:padding="5dp"
            android:hint="Your Message..."
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginRight="20dp"
            android:foreground="@drawable/ripple_effect"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/text_field"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foreground="@drawable/ripple_effect_noborder"
            android:background="@drawable/submit_button"
            />
        </RelativeLayout>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        android:foreground="@drawable/ripple_effect"
        app:menu="@menu/sidebar_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>